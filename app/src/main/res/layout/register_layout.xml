<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/bottom_bar"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/loginToolBar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="#5198e4">
        <!--返回-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_revert"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            android:id="@+id/register_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="+86"

                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textColorHint="#666"
                android:singleLine="true"
                android:id="@+id/register_number"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="验证手机"
                android:background="#777"
                android:id="@+id/verify_button"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="验证码"

                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:textColorHint="#666"
                android:singleLine="true"
                android:id="@+id/register_verification_code"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="用户名"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:textColorHint="#666"
                android:singleLine="true"
                android:id="@+id/register_name"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="密码"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:textColorHint="#666"
                android:singleLine="true"
                android:id="@+id/register_password1"

                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="确认密码"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"

                android:textColorHint="#666"
                android:singleLine="true"
                android:id="@+id/register_password2"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="注册"

            android:id="@+id/register_button" />

        <CheckBox
            android:id="@+id/register_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意注册协议和隐私政策"
        />

    </LinearLayout>

</LinearLayout>
